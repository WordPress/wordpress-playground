{
	"name": "php-wasm-web",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/php-wasm/web/src",
	"projectType": "library",
	"implicitDependencies": ["php-wasm-compile"],
	"targets": {
		"build": {
			"executor": "nx:noop",
			"dependsOn": ["build:README"]
		},
		"build:README": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"cp packages/php-wasm/web/README.md dist/packages/php-wasm/web"
				]
			},
			"dependsOn": ["build:package-json"]
		},
		"build:package-json": {
			"executor": "@wp-playground/nx-extensions:package-json",
			"options": {
				"tsConfig": "packages/php-wasm/web/tsconfig.lib.json",
				"outputPath": "dist/packages/php-wasm/web",
				"buildTarget": "php-wasm-web:build:bundle:production"
			}
		},
		"build:bundle": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"options": {
				"emptyOutDir": false,
				"outputPath": "dist/packages/php-wasm/web"
			}
		},
		"recompile-php": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"node packages/php-wasm/compile/build.js --PLATFORM=web --output-dir=packages/php-wasm/web/public/php"
				],
				"parallel": false
			}
		},
		"recompile-php:all": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=8.3 --output-dir=packages/php-wasm/web/public/php",
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=8.2 --output-dir=packages/php-wasm/web/public/php",
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=8.1 --output-dir=packages/php-wasm/web/public/php",
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=8.0 --output-dir=packages/php-wasm/web/public/php",
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=7.4 --output-dir=packages/php-wasm/web/public/php",
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=7.3 --output-dir=packages/php-wasm/web/public/php",
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=7.2 --output-dir=packages/php-wasm/web/public/php",
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=7.1 --output-dir=packages/php-wasm/web/public/php",
					"node packages/php-wasm/compile/build.js --PLATFORM=web --PHP_VERSION=7.0 --output-dir=packages/php-wasm/web/public/php"
				],
				"parallel": false
			}
		},
		"publish": {
			"executor": "nx:run-commands",
			"options": {
				"command": "node tools/scripts/publish.mjs php-wasm {args.ver} {args.tag}",
				"parallel": false
			},
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["packages/php-wasm/web/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nx/vite:test",
			"outputs": ["{workspaceRoot}/coverage/packages/php-wasm/web"],
			"options": {
				"passWithNoTests": true,
				"reportsDirectory": "../../coverage/packages/php-wasm/web"
			}
		},
		"typecheck": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"tsc -p packages/php-wasm/web/tsconfig.lib.json --noEmit",
					"tsc -p packages/php-wasm/web/tsconfig.spec.json --noEmit"
				]
			}
		}
	},
	"tags": ["scope:php-binaries"]
}
