{
  "name": "playground-remote",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/playground/remote/src",
  "projectType": "library",
  "implicitDependencies": ["playground-compile-wordpress"],
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/playground/remote",
        "main": "packages/playground/remote/wordpress.html",
        "tsConfig": "packages/playground/remote/tsconfig.lib.json",
        "assets": ["packages/playground/remote/*.md"]
      }
    },
    "dev": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "playground-remote:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "playground-remote:build:development",
          "hmr": true
        },
        "development-for-website": {
          "buildTarget": "playground-remote:build:development",
          "hmr": true,
          "logLevel": "silent"
        },
        "production": {
          "buildTarget": "playground-remote:build:production",
          "hmr": false
        }
      }
    },
    "recompile-wordpress": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/playground/compile-wordpress/build.js --preset={args.preset} --output-dir=packages/playground/remote/src/wordpress",
        "parallel": false
      }
    },
    "recompile-wordpress:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node packages/playground/compile-wordpress/build.js --preset=5.9 --output-dir=packages/playground/remote/src/wordpress",
          "node packages/playground/compile-wordpress/build.js --preset=6.0 --output-dir=packages/playground/remote/src/wordpress",
          "node packages/playground/compile-wordpress/build.js --preset=6.1 --output-dir=packages/playground/remote/src/wordpress",
          "node packages/playground/compile-wordpress/build.js --preset=nightly --output-dir=packages/playground/remote/src/wordpress"
        ],
        "parallel": false
      }
    },
    "preview": {
      "executor": "@nrwl/vite:preview-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "playground-remote:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "playground-remote:build:development"
        },
        "production": {
          "buildTarget": "playground-remote:build:production"
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs playground {args.ver} {args.tag}",
        "parallel": false
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/playground/remote/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/playground/remote"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/packages/playground/remote"
      }
    }
  },
  "tags": []
}
