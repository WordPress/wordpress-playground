{
	"name": "playground-wordpress",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/playground/wordpress/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "nx:noop",
			"dependsOn": ["build:README", "build:rollup-declarations"]
		},
		"build:README": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"cp packages/playground/wordpress/README.md dist/packages/playground/wordpress"
				]
			},
			"dependsOn": ["build:package-json"]
		},
		"build:package-json": {
			"executor": "@wp-playground/nx-extensions:package-json",
			"options": {
				"tsConfig": "packages/playground/wordpress/tsconfig.lib.json",
				"outputPath": "dist/packages/playground/wordpress",
				"buildTarget": "php-wasm-web:build:bundle:production"
			}
		},
		"build:bundle": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"defaultConfiguration": "production",
			"options": {
				"outputPath": "dist/packages/playground/wordpress"
			},
			"configurations": {
				"development": {
					"mode": "development"
				},
				"production": {
					"mode": "production"
				}
			},
			"dependsOn": ["^build"]
		},
		"build:rollup-declarations": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"npx dts-bundle-generator -o packages/playground/wordpress/src/rollup.d.ts -- packages/playground/wordpress/src/index.ts",
					"rimraf dist/packages/playground/wordpress/lib/*.d.ts",
					"rimraf dist/packages/playground/wordpress/*.d.ts",
					"cp packages/playground/wordpress/src/rollup.d.ts dist/packages/playground/wordpress/index.d.ts"
				],
				"parallel": false
			},
			"dependsOn": ["build:bundle"]
		},
		"publish": {
			"executor": "nx:run-commands",
			"options": {
				"command": "node tools/scripts/publish.mjs playground-wordpress {args.ver} {args.tag}",
				"parallel": false
			},
			"dependsOn": ["build"]
		},
		"test": {
			"executor": "nx:noop",
			"dependsOn": ["test:vite"]
		},
		"test:vite": {
			"executor": "@nx/vite:test",
			"outputs": [
				"{workspaceRoot}/coverage/packages/playground/wordpress"
			],
			"options": {
				"passWithNoTests": true,
				"reportsDirectory": "../../../coverage/packages/playground/wordpress"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["packages/playground/wordpress/**/*.ts"]
			}
		}
	},
	"tags": []
}
